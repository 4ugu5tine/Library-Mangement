<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.edem.librarymanagementsystem.controller.BorrowBookController">
    <children>
        <Label text="Borrow Book" style="-fx-font-size: 24px;" />

        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="User ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="userId_field" promptText="Enter User ID" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Book ID:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="bookId_field" promptText="Enter Book ID" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            </children>
        </GridPane>

        <Button fx:id="borrowButton" text="Borrow Book" style="-fx-font-size: 14px;" />
    </children>
</VBox>
