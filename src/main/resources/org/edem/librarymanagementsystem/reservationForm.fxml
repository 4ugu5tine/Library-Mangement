<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="389.0" prefWidth="452.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.edem.librarymanagementsystem.controller.MakeReservationController">
   <children>
      <Label prefHeight="56.0" prefWidth="230.0" style="-fx-font-size: 24px; -fx-padding: 10;" text="Make Reservation" textAlignment="CENTER" />
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Patron ID" />
            <TextField fx:id="patronid" prefHeight="26.0" prefWidth="198.0" promptText="Patron's ID number " />
            <Label fx:id="error_patronid" textFill="RED" />
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="15.0" layoutY="81.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Book ID" />
            <TextField fx:id="bookid" prefHeight="26.0" prefWidth="198.0" promptText="Book ID" />
            <Label fx:id="error_bookid" textFill="RED" />
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="15.0" layoutY="225.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Date" />
            <DatePicker fx:id="date" />
            <Label fx:id="error_date" textFill="RED" />
         </children>
      </VBox>
      <HBox alignment="BOTTOM_CENTER" prefHeight="26.0" prefWidth="442.0" spacing="10.0">
         <children>
            <Button fx:id="create" mnemonicParsing="false" onMouseClicked="#create" text="Submit" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
