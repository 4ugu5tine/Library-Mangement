<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="389.0" prefWidth="452.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.edem.librarymanagementsystem.controller.AddPatronController">
   <children>
      <Label prefHeight="56.0" prefWidth="169.0" style="-fx-font-size: 24px; -fx-padding: 10;" text="Create Patron" textAlignment="CENTER" />
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Name:" />
            <TextField fx:id="name" prefHeight="26.0" prefWidth="198.0" promptText="Name" />
            <Label fx:id="error_name" textFill="RED" />
         </children>
      </VBox>
      <VBox layoutX="15.0" layoutY="81.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Email" />
            <TextField fx:id="email" prefHeight="26.0" prefWidth="198.0" promptText="Email" />
            <Label fx:id="error_email" textFill="RED" />
         </children>
      </VBox>
      <VBox layoutX="15.0" layoutY="261.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Phone" />
            <TextField fx:id="phone" prefHeight="26.0" prefWidth="198.0" promptText="Phone" />
            <Label fx:id="error_phone" textFill="RED" />
         </children>
      </VBox>
      <VBox layoutX="15.0" layoutY="309.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Address" />
            <TextField fx:id="address" prefHeight="26.0" prefWidth="198.0" promptText="Address" />
            <Label fx:id="error_address" textFill="RED" />
         </children>
      </VBox>
      <HBox alignment="BOTTOM_CENTER" prefHeight="26.0" prefWidth="442.0" spacing="10.0">
         <children>
            <Button fx:id="create" mnemonicParsing="false" onMouseClicked="#create" text="Submit" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
