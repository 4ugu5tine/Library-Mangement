<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.edem.librarymanagementsystem.controller.UserController">
    <top>
        <Label text="Users" style="-fx-font-size: 24px; -fx-padding: 10;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <TableView fx:id="user_table" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="column_userId" prefWidth="100.0" text="User ID" />
                <TableColumn fx:id="column_name" prefWidth="200.0" text="Name" />
                <TableColumn fx:id="column_email" prefWidth="200.0" text="Email" />
                <TableColumn fx:id="column_phone" prefWidth="150.0" text="Phone" />
                <TableColumn fx:id="column_address" prefWidth="200.0" text="Address" />
                <TableColumn fx:id="column_accountType" prefWidth="150.0" text="Account Type" />
                <TableColumn fx:id="column_borrowedBooks" prefWidth="150.0" text="Borrowed Books" />
            </columns>
        </TableView>
    </center>
    <left>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="155.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Books" />
                <Label text="Categories" />
                <Label text="Authors" />
                <Label text="Patrons" />
                <Label text="Transactions" />
                <Label text="Reservations" />
            </children>
        </VBox>
    </left>
</BorderPane>
