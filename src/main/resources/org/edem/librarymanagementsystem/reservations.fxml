<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.edem.librarymanagementsystem.controller.ReservationController">
    <top>
        <Label text="Reservations" style="-fx-font-size: 24px; -fx-padding: 10;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <TableView fx:id="reservation_table" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="column_reservationId" prefWidth="100.0" text="Reservation ID" />
                <TableColumn fx:id="column_userId" prefWidth="100.0" text="User ID" />
                <TableColumn fx:id="column_bookId" prefWidth="100.0" text="Book ID" />
                <TableColumn fx:id="column_date" prefWidth="150.0" text="Date" />
            </columns>
        </TableView>
    </center>

    <left>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="155.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Categories" />
                <Label text="Authors" />
                <Label text="Patrons" />
                <Label text="Transactions" />
            </children>
        </VBox>
    </left>
</BorderPane>
